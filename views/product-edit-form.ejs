<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', ) %>
<style>
	
	.imagen img{
		width: 20%;
	}
	.products-wrapper{
		background-color: #c9c8c8;
		padding: 20px;
		border-radius: 5px;
	}
</style>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productoEdit.name %> </i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/product/edit/<%= productoEdit.id %>?_method=PUT" method="POST" style="font-size: 15px;">
				<div class="row product-detail">
					<div class="imagen col-12 offset-5 mb-3">
						<img src="/images/products/<%= productoEdit.image %>" alt="">
					</div>
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value ="<%=productoEdit.name %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="$ <%=aMiles(productoEdit.price )%>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%=productoEdit.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited" >Sin descuento</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label" >Descipción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-success" style="font-size: 20px;">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>